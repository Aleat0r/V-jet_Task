        <activity
            android:name=".ui.activity.GalleryActivity"
            android:theme="@style/ThemeNoActionBar"></activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <meta-data
            android:name="io.fabric.ApiKey"
