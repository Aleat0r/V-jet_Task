<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.aleat0r.v_jettask.utils.custom.view.SquareButton
            android:id="@+id/btn_facebook"
            style="@style/SocialNetworkButton"
            android:background="@drawable/selector_facebook" />

        <Space
            android:layout_width="@dimen/activity_padding"
            android:layout_height="wrap_content" />

        <com.aleat0r.v_jettask.utils.custom.view.SquareButton
            android:id="@+id/btn_twitter"
            style="@style/SocialNetworkButton"
            android:background="@drawable/selector_twitter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.aleat0r.v_jettask.utils.custom.view.SquareButton
            android:id="@+id/btn_google_plus"
            style="@style/SocialNetworkButton"
            android:background="@drawable/selector_google_plus" />

        <Space
            android:layout_width="@dimen/activity_padding"
            android:layout_height="wrap_content" />

        <com.aleat0r.v_jettask.utils.custom.view.SquareButton
            android:id="@+id/btn_vkontakte"
            style="@style/SocialNetworkButton"
            android:background="@drawable/selector_vkontakte" />

    </LinearLayout>

</LinearLayout>
